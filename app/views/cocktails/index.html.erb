<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://www.plymouthboattrips.co.uk/wp-content/themes/pbt/images/partycruises-1.jpg');">
  <div class="banner-content">
   <div class="container">
    <h2>Our cocktails:</h2>
      <p> <%= link_to "Create a new cocktail", new_cocktail_path %> </p>
      <div class="row">
              <% @cocktails.each do |cocktail| %>
        <div class="col-xs-12 col-sm-4">
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cocktail.photo_link %>');">
            <div class="card-description">
              <h2> <%= cocktail.name %> </h2>
              <p> <%= link_to "Details", cocktail_path(cocktail) %> </p>
            </div>
          </div>
        </div>
              <% end %>
      </div>
    </div>
  </div>
</div>
